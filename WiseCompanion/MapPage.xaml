<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:maps="clr-namespace:Microsoft.Maui.Controls.Maps;assembly=Microsoft.Maui.Controls.Maps"
             x:Class="WiseCompanion.MapPage">

    <VerticalStackLayout Spacing="25" Padding="30">
        <maps:Map x:Name="map" 
                  IsShowingUser="true" VerticalOptions="FillAndExpand" HeightRequest="400"/>
        <Button Text="Add Car Location"
                    Clicked="AddCarLocationClicked"
                    BackgroundColor="#ACB9E8"
                    TextColor="Black"
                    CornerRadius="20"
                    FontAttributes="Bold" 
                    FontFamily="Arial"
                    FontSize="25"
                    WidthRequest="300" 
                    HeightRequest="75"/>
        <Button Text="Find My Car"  
                Clicked="OpenInGoogleMapsClicked"
                BackgroundColor="#ACB9E8"
                TextColor="Black"
                CornerRadius="20"
                FontAttributes="Bold" 
                FontFamily="Arial"
                FontSize="25"
                WidthRequest="300" 
                HeightRequest="75"/>
    </VerticalStackLayout>
</ContentPage>
